<!doctype html>
<html>
    <head>
        <%- include('head'); -%>
        <script src="/js/projects.js"></script>
    </head>
    <body>
        <div class="container-fluid p-0">
            <%- include('header'); -%>
            <main id="projectList">
                <div class="form-inline my-2 mx-4">
                    <div class="btn-group" role="group">
                        <button id="toggle-list" class="btn btn-light p-2">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-list" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
                              </svg>
                        </button>
                        <button id="toggle-cards" class="btn btn-dark p-2">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-card-heading" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M14.5 3h-13a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                                <path fill-rule="evenodd" d="M3 8.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z"/>
                                <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5v-1z"/>
                              </svg>
                        </button>
                    </div>
                    <input class="search form-control m-1" placeholder="Search" aria-label="Search">
                    <button class="sort btn btn-outline-success m-1" data-sort="card-title">Sort by name</button>
                    <button class="sort btn btn-outline-success m-1" data-sort="updated">Sort by updated</button>
                    <button class="sort btn btn-outline-success m-1" data-sort="created">Sort by created</button>
                </div>
                <div class="list row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 m-1">
                    <% projects.forEach(function(project){ %>
                        <%- include('projectCard', project); %>
                    <% }); %>
                </div>
            </main>
        </div>
        <script src="/js/list.min.js"></script>
    </body>
</html> 