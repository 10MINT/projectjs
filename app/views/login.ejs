<!doctype html>
<html>
<head>
    <%- include('head'); -%>
    <style>
        body { padding-top: 80px; }
    </style>
</head>
<body>
<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-4"><img class="logo" src="img/logo.png" /> Login</h1>
        <p>Login or Register with:</p>
        <% if (process.env.GITHUB_ID) { %>
            <a href="/auth/github" class="btn btn-dark"><span class="fab fa-github"></span> Github</a>
        <% } %>
        <% if (process.env.GOOGLE_ID) { %>
            <a href="/auth/google" class="btn btn-primary"><span class="fab fa-google"></span> Google</a>
        <% } %>        
        <% if (process.env.TWITTER_ID) { %>
            <a href="/auth/twitter" class="btn btn-primary"><span class="fab fa-twitter"></span> Twitter</a>
        <% } %>
        <% if (process.env.FACEBOOK_ID) { %>
            <a href="/auth/facebook" class="btn btn-primary"><span class="fab fa-facebook"></span> Facebook</a>
        <% } %>
    </div>
</div>
</body>
</html> 